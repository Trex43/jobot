# =============================================================================
# JobAutoFlow Backend Environment Configuration
# =============================================================================

# Application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/jobautoflow?schema=public

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Authentication (JWT)
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# =============================================================================
# OAuth Providers
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:5000/api/v1/auth/linkedin/callback

# =============================================================================
# Payment (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Subscription Prices (Stripe Price IDs)
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_xxx

# =============================================================================
# Email (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@jobautoflow.com
EMAIL_FROM_NAME=JobAutoFlow

# =============================================================================
# AI/ML (OpenAI)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# =============================================================================
# External Job APIs
# =============================================================================
# Indeed API
INDEED_PUBLISHER_ID=your_indeed_publisher_id

# Glassdoor API
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_KEY=your_glassdoor_key

# =============================================================================
# AWS S3 (File Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=jobautoflow-uploads

# =============================================================================
# Monitoring & Logging
# =============================================================================
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
LOG_LEVEL=info

# =============================================================================
# Security
# =============================================================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
