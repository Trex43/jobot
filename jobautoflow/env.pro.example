# =============================================================================
# JobAutoFlow - PROFESSIONAL Deployment Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://jobautoflow.com
API_URL=https://api.jobautoflow.com

# ============================================
# DATABASE (AWS RDS PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@jobautoflow-db.xxxxx.us-east-1.rds.amazonaws.com:5432/jobautoflow

# ============================================
# REDIS (AWS ElastiCache)
# ============================================
REDIS_HOST=jobautoflow-redis.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=  # Leave empty for ElastiCache without auth

# ============================================
# JWT SECRETS
# Generate with: openssl rand -base64 32
# ============================================
JWT_SECRET=GENERATE_A_32_CHAR_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_32_CHAR_SECRET_HERE
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ============================================
# STRIPE (LIVE MODE)
# Get from: https://dashboard.stripe.com/apikeys
# ============================================
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_LIVE_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY

# Price IDs for subscriptions
STRIPE_PRICE_PRO_MONTHLY=price_live_xxx
STRIPE_PRICE_PRO_YEARLY=price_live_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_live_xxx
STRIPE_PRICE_ENTERPRISE_YEARLY=price_live_xxx

# ============================================
# EMAIL (SendGrid Pro)
# ============================================
SENDGRID_API_KEY=SG.YOUR_PRO_SENDGRID_API_KEY
EMAIL_FROM=noreply@jobautoflow.com
EMAIL_FROM_NAME=JobAutoFlow

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4

# ============================================
# AWS S3 (File Storage)
# ============================================
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=jobautoflow-uploads
AWS_S3_BACKUP_BUCKET=jobautoflow-backups

# ============================================
# SENTRY ERROR TRACKING
# ============================================
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# DATADOG MONITORING
# ============================================
DATADOG_API_KEY=YOUR_DATADOG_API_KEY
DATADOG_APP_KEY=YOUR_DATADOG_APP_KEY

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://jobautoflow.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EXTERNAL JOB APIs
# ============================================
INDEED_PUBLISHER_ID=your_indeed_publisher_id
GLASSDOOR_PARTNER_ID=your_glassdoor_partner_id
GLASSDOOR_KEY=your_glassdoor_key

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
